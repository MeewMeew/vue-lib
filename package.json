{
  "name": "@meewmeew/vue-lib",
  "version": "0.0.1-hotfix",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/mew-vue-lib.umd.js",
  "module": "./dist/mew-vue-lib.es.js",
  "types": "./dist/mew-vue-lib.d.ts",
  "exports": {
    ".": {
      "import": "./dist/mew-vue-lib.es.js",
      "require": "./dist/mew-vue-lib.umd.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/@meewmeew",
    "access": "public",
    "tag": "latest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meewmeew/vue-lib"
  },
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "run-s build-only move-types",
    "build-check": "run-p type-check \"build-only {@}\" -- ",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "move-types": "vue-tsc --emitDeclarationOnly && mv dist/src dist/types",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "clsx": "npm:clsx@^2.1.1",
    "pinia": "^2.1.7",
    "tailwind-merge": "npm:tailwind-merge@^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "22.8.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "4.0.1",
    "@vue/eslint-config-prettier": "10.1.0",
    "@vue/eslint-config-typescript": "14.1.3",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "eslint": "9.13.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vue": "^9.17.0",
    "npm-run-all2": "7.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.14",
    "typescript": "5.6.3",
    "vite": "^5.1.6",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vue-tsc": "^2.0.6"
  }
}